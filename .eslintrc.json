{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": "plugin:react/recommended",
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": ["react"],
	"rules": {
		"jsx-a11y/label-has-for": [
			2,
			{
				"components": ["Label"],
				"required": {
					"every": ["nesting", "id"]
				},
				"allowChildren": false
			}
		]
	}
}
